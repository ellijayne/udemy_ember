<h1 {{action "toggleBody"}}>{{title}}</h1>
<p>Created: {{format-date created}}</p>

{{#if isShowingBody}}
    <p>{{body}}</p>
{{/if}}

<p>
    <strong>Authors: </strong>

    {{#each authors as |author|}}

        {{author}},

    {{/each}}

</p>

<h4>Comments</h4>

<ul>
    {{#each comments as |comment|}}
    <li><strong>{{comment.name}}</strong> - {{comment.comment}}</li>
    {{/each}}
</ul>

<button {{action "sayHello"}}>Say Hello</button>

<hr>

<form {{action "submitAction" on="submit"}}>
    <h4>Add comment</h4>
    <p>
        Name: {{input value=name}}
    </p>
    <p>
        Body: {{textarea value=comment}}
    </p>
    <button type="submit">Submit</button>
</form>